/* pages/auditList /auditList .wxss */

.info-wrap {
  position: relative;
}

.info-wrap .bg {
  width: 750rpx;
  height: 250rpx;
}

.user-info {
  width: 750rpx;
  height: 250rpx;
  padding: 70rpx 30rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 98;
}

.user-info .headimg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  overflow: hidden;
  background: #efefef;
}

.user-info .text {
  width: 480rpx;
  height: 69rpx;
  padding-top: 6rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 1.8em;
}

.user-info .icon {
  color: #fff;
  position: absolute;
  top: 30rpx;
  right: 40rpx;
  font-size: 32rpx;
  z-index: 99;
}

.audit-list {
  width: 710rpx;
  margin: 0 auto;
  position: relative;
  margin-top: -30rpx;
  padding-bottom: 100rpx;
}

.audit-list .item {
  width: 710rpx;
  height: 300rpx;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 15rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.audit-list .item .state-img {
  width: 128rpx;
  height: 128rpx;
  position: absolute;
  right: 30rpx;
  top: 120rpx;
}

.item .tit {
  height: 80rpx;
  line-height: 80rpx;
  color: #3e9aff;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}

.item .tit .house {
  font-size: 46rpx;
  margin-right: 30rpx;
}

.item .tit .more {
  color: #999;
}

.item .info {
  padding-top: 20rpx;
  color: #4a4a4a;
}

.item .info text {
  color: #999;
}

.item .info .row {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  white-space: nowrap;
  overflow-y: hidden;
}

.addIcon {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #f2fcfa;
  box-shadow: 0px 9rpx 24rpx 5rpx rgba(15, 80, 150, 0.3);
  border-radius: 40rpx;
  position: fixed;
  bottom: 10rpx;
  left: 75rpx;
}

.modal-wrap {
  display: none;
}

.modal-wrap.show {
  display: block;
}

.modal-inner {
  width: 576rpx;
  height: 351rpx;
  background: #f9f9f9;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -175rpx;
  margin-left: -288rpx;
  text-align: center;
  overflow: hidden;
}

.modal-inner .tit {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  border-bottom: 1px solid #eee;
}

.modal-inner .tel {
  height: 160rpx;
  line-height: 160rpx;
  font-size: 40rpx;
  color: #fd5e6b;
}

.modal-inner .charge {
  border-top: 1px solid #eee;
  height: 90rpx;
  line-height: 90rpx;
}

.modal-inner .charge text {
  display: inline-block;
  width: 50%;
  font-size: 28rpx;
}

.modal-inner .charge .call {
  color: #fff;
}
